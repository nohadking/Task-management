@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);

            // حفظ اسم الصورة في الحقل المخفي (PhotoHomeSliderContent-photo)
            var file = event.target.files[0];
            var fileName = file.name;  // الحصول على اسم الصورة فقط

            // تحديث الحقل المخفي باسم الصورة
            document.getElementById('PhotoHomeSliderContent-photo').value = fileName;
        };
    </script>

    <script>
        $("#url").val(window.location.href);
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var editPhotoHomeSliderContentModal = document.getElementById('edit-PhotoHomeSliderContent');
            editPhotoHomeSliderContentModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;

                // استخراج البيانات من الـ data-attributes
                var PhotoHomeSliderContentId = button.getAttribute('data-PhotoHomeSliderContent-id');
                var PhotoHomeSliderContentNameAr = button.getAttribute('data-PhotoHomeSliderContent-name-ar');
                var PhotoHomeSliderContentNameEn = button.getAttribute('data-PhotoHomeSliderContent-name-en');
                var PhotoHomeSliderContentPhoto = button.getAttribute('data-PhotoHomeSliderContent-photo');
                var PhotoHomeSliderContentActive = button.getAttribute('data-PhotoHomeSliderContent-active') === "true";
                var PhotoHomeSliderContentCurrentState = button.getAttribute('data-PhotoHomeSliderContent-currentstate') === "true";
                // تعبئة حقول المودال
                var modal = editPhotoHomeSliderContentModal;
                modal.querySelector('#PhotoHomeSliderContent-id').value = PhotoHomeSliderContentId;
                modal.querySelector('#PhotoHomeSliderContent-name-ar').value = PhotoHomeSliderContentNameAr;
                modal.querySelector('#PhotoHomeSliderContent-name-en').value = PhotoHomeSliderContentNameEn;
                modal.querySelector('#output').src = PhotoHomeSliderContentPhoto;  // عرض الصورة
                modal.querySelector('#PhotoHomeSliderContent-active').checked = PhotoHomeSliderContentActive;
                modal.querySelector('#PhotoHomeSliderContent-CurrentState').checked = PhotoHomeSliderContentCurrentState;
                // تعيين اسم الصورة في الحقل المخفي عند التعديل
                if (PhotoHomeSliderContentPhoto) {
                    var PhotoHomeSliderContentPhotoName = PhotoHomeSliderContentPhoto.split('/').pop(); // استخراج اسم الصورة فقط
                    modal.querySelector('#PhotoHomeSliderContent-photo').value = PhotoHomeSliderContentPhotoName;  // تعيين اسم الصورة المخزن في الـ data-attributes
                }
            });
        });
    </script>
}

