@model LoginViewModel
@{
    ViewData["Title"] = "LoginAr";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Meta Tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
          content="Streamline your business with our advanced CRM template. Easily integrate and customize to manage sales, support, and customer interactions efficiently. Perfect for any business size">
    <meta name="keywords"
          content="Advanced CRM template, customer relationship management, business CRM, sales optimization, customer support software, CRM integration, customizable CRM, business tools, enterprise CRM solutions">
    <meta name="author" content="Dreams Technologies">
    <meta name="robots" content="index, follow">

    <!-- Title -->
    <title>Login | CRMS - Advanced Bootstrap 5 Admin Template for Customer Management</title>

    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/AdminAr/assets/img/apple-touch-icon.png">

    <!-- Favicon -->
    <link rel="icon" href="~/AdminAr/assets/img/favicon.png" type="image/x-icon">
    <link rel="shortcut icon" type="image/x-icon" href="~/AdminAr/assets/img/favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/AdminAr/assets/css/bootstrap.rtl.min.css">

    <!-- Tabler Icon CSS -->
    <link rel="stylesheet" href="~/AdminAr/assets/plugins/tabler-icons/tabler-icons.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/AdminAr/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/AdminAr/assets/plugins/fontawesome/css/all.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/AdminAr/assets/css/style.css">

</head>

<body class="account-page">

    <!-- Main Wrapper -->
    <div class="main-wrapper">

        <div class="account-content">
            <div class="d-flex flex-wrap w-100 vh-100 overflow-hidden account-bg-01">
                <div class="d-flex align-items-center justify-content-center flex-wrap vh-100 overflow-auto p-4 w-50 bg-backdrop">
                    <form asp-action="LoginAr" asp-controller="Accounts" method="post" class="frm-single">
                        <div class="mx-auto mw-450">
                            <div class="text-center mb-4">
                                <img src="~/AdminEn/assets/img/logo.svg" class="img-fluid" alt="Logo">
                            </div>
                            <div class="mb-4">
                                <h4 class="mb-2 fs-20">تسجيل الدخول</h4>
                                <p>قم بالتسجيل الدخول للنظام مستخدما البريد الاكتروني</p>
                            </div>
                            @if (ViewBag.ErrorLogin == false)
                            {

                                <span class="alert alert-danger w-100">
                                    @ResourceWeb.lbMsgErrorLogin
                                </span>

                                <br /> <br />
                            }
                            <div class="mb-3">
                                <label class="col-form-label">البريد الاكتروني</label>
                                <div class="position-relative">
                                    <span class="input-icon-addon">
                                        <i class="ti ti-mail"></i>
                                    </span>
                                    <input asp-for="Eamil" type="text" value="" class="form-control">
                                    <span asp-validation-for="Eamil"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="col-form-label">كلمة المرور</label>
                                <div class="pass-group">
                                    <input asp-for="Password" type="password" class="pass-input form-control">
                                    <span class="ti toggle-password ti-eye-off"></span>
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <div class="form-check form-check-md d-flex align-items-center">
                                    <input asp-for="RememberMy" class="form-check-input" type="checkbox" value="" id="checkebox-md"
                                           checked="">
                                    <label class="form-check-label" for="checkebox-md">
                                        تذكرني
                                    </label>
                                </div>
                                <div class="text-end">
                                    <a href="forgot-password.html" class="text-primary fw-medium link-hover">
                                       هل نسيت كلمة المرور?
                                    </a>
                                </div>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary w-100">تسجيل الدخول</button>
                            </div>
                            <div class="mb-3">
                                <h6>
                                    ليس لديك حساب?<a asp-area="Admin" asp-controller="Accounts" asp-action="RegisterAr" class="text-purple link-hover">
                                       قم بانشاء حساب
                                    </a>
                                </h6>
                            </div>
                            <div class="form-set-login or-text mb-3">
                                <h4>OR</h4>
                            </div>
                            <div class="d-flex align-items-center justify-content-center flex-wrap mb-3">
                                <div class="text-center me-2 flex-fill">
                                    <a href="javascript:void(0);"
                                       class="br-10 p-2 px-4 btn bg-pending  d-flex align-items-center justify-content-center">
                                        <img class="img-fluid m-1" src="~/AdminEn/assets/img/icons/facebook-logo.svg"
                                             alt="Facebook">
                                    </a>
                                </div>
                                <div class="text-center me-2 flex-fill">
                                    <a href="javascript:void(0);"
                                       class="br-10 p-2 px-4 btn bg-white d-flex align-items-center justify-content-center">
                                        <img class="img-fluid  m-1" src="~/AdminEn/assets/img/icons/google-logo.svg"
                                             alt="Facebook">
                                    </a>
                                </div>
                                <div class="text-center flex-fill">
                                    <a href="javascript:void(0);"
                                       class="bg-dark br-10 p-2 px-4 btn btn-dark d-flex align-items-center justify-content-center">
                                        <img class="img-fluid  m-1" src="~/AdminEn/assets/img/icons/apple-logo.svg" alt="Apple">
                                    </a>
                                </div>
                            </div>
                            <div class="text-center">
                                <p class="fw-medium text-gray">Copyright &copy; 2024 - CRMS</p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <!-- /Main Wrapper -->
    <!-- jQuery -->
    <script src="~/AdminAr/assets/js/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="~/AdminAr/assets/js/bootstrap.bundle.min.js"></script>

    <!-- Feather Icon JS -->
    <script src="~/AdminAr/assets/js/feather.min.js"></script>

    <!-- Slimscroll JS -->
    <script src="~/AdminAr/assets/js/jquery.slimscroll.min.js"></script>

    <!-- Custom JS -->
    <script src="~/AdminAr/assets/js/script.js"></script>

</body>

</html>

