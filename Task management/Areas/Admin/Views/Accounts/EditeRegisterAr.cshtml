@model ViewmMODeElMASTER
@{
    ViewData["Title"] = "EditeRegisterAr";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Meta Tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
          content="Streamline your business with our advanced CRM template. Easily integrate and customize to manage sales, support, and customer interactions efficiently. Perfect for any business size">
    <meta name="keywords"
          content="Advanced CRM template, customer relationship management, business CRM, sales optimization, customer support software, CRM integration, customizable CRM, business tools, enterprise CRM solutions">
    <meta name="author" content="Dreams Technologies">
    <meta name="robots" content="index, follow">

    <!-- Title -->
    <title>Register | CRMS - Advanced Bootstrap 5 Admin Template for Customer Management</title>

    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/AdminAr/assets/img/apple-touch-icon.png">

    <!-- Favicon -->
    <link rel="icon" href="~/AdminAr/assets/img/favicon.png" type="image/x-icon">
    <link rel="shortcut icon" type="image/x-icon" href="~/AdminAr/assets/img/favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/AdminAr/assets/css/bootstrap.rtl.min.css">

    <!-- Tabler Icon CSS -->
    <link rel="stylesheet" href="~/AdminAr/assets/plugins/tabler-icons/tabler-icons.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/AdminAr/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/AdminAr/assets/plugins/fontawesome/css/all.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/AdminAr/assets/css/style.css">

</head>

<body class="account-page">

    <!-- Main Wrapper -->
    <div class="main-wrapper">

        <div class="account-content">
            <div class="d-flex flex-wrap w-100 vh-100 overflow-hidden account-bg-02">
                <div class="d-flex align-items-center justify-content-center flex-wrap vh-100 overflow-auto p-4 w-50 bg-backdrop">


                    <form class="flex-fill" method="post" asp-controller="Accounts" asp-action="RegistersEdite" enctype="multipart/form-data">
                        <div class="mx-auto mw-450">
                            <div class="text-center mb-4">
                                <img src="~/AdminAr/assets/img/logo.svg" class="img-fluid" alt="Logo">
                            </div>
                            <div class="mb-4">
                                <h4 class="mb-2 fs-20">تعديل البيانات </h4>
                                <p>تعديل بيانات المستخدم t</p>
                            </div>
                            <span style="color:red"> <strong>@TempData["Message2"]</strong></span>
                            <input type="hidden" asp-for="returnUrl" id="url">
                            <input type="hidden" asp-for="sUser.Id">
                            <div class="mb-3">
                                <label class="col-form-label">الاسم كامل</label>
                                <div class="position-relative">
                                    <span class="input-icon-addon">
                                        <i class="ti ti-user"></i>
                                    </span>
                                    <input type="text" asp-for="sUser.Name" class="form-control">
                                    <span asp-validation-for="sUser.Name"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="col-form-label">اسم المستخدم</label>
                                <div class="position-relative">
                                    <span class="input-icon-addon">
                                        <i class="ti ti-mail"></i>
                                    </span>
                                    <input type="text" asp-for="sUser.UserName" class="form-control">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="col-form-label">البريد الاكتروني</label>
                                <div class="position-relative">
                                    <span class="input-icon-addon">
                                        <i class="ti ti-mail"></i>
                                    </span>
                                    <input type="text" asp-for="sUser.Email" class="form-control">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="col-form-label">رقم الهاتف</label>
                                <div class="position-relative">
                                    <span class="input-icon-addon">
                                        <i class="ti ti-mail"></i>
                                    </span>
                                    <input type="text" asp-for="sUser.PhoneNumber" class="form-control">
                                    <span asp-validation-for="sUser.PhoneNumber"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title">صورة المستخدم</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="custom-file-container" data-upload-id="myFirstImage">
                                            <label>
                                                <a href="javascript:void(0)" class="custom-file-container__image-clear" title="Clear Image"></a>
                                            </label>
                                            <label class="custom-file-container__custom-file">
                                                <input type="file" class="custom-file-container__custom-file__custom-file-input" name="Files" id="file" onchange="loadFile(event)">
                                                <input type="hidden" name="MAX_FILE_SIZE" value="10485760">
                                                <img id="output" width="100" height="100" />
                                                <div class="form-group">
                                                    <input type="hidden" asp-for="sUser.ImageUser" for="exampleInputEmail1"></input>
                                                    <p><img src="@string.Format("/Images/Users/{0}",Model.sUser.ImageUser)" id="output" width="100" height="100" /></p>
                                                </div>
                                                <span class="custom-file-container__custom-file__custom-file-control"></span>
                                            </label>
                                            <div class="custom-file-container__image-preview"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <div class="form-check form-check-md d-flex align-items-center">
                                    <input class="form-check-input" type="checkbox"
                                           asp-for="sUser.ActiveUser">

                                    <label class="form-check-label" for="checkebox-md">
                                       تفعيل المستخدم
                                    </label>
                                </div>
                            </div>


                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary w-100">حفظ</button>
                            </div>
                            <div class="mb-3">
                                <h6>
                                    لديك حساب بالفعل? <a asp-area="Admin" asp-controller="Accounts" asp-action="LoginAr" class="text-purple link-hover">
                                      قم بتسجيل الدخول
                                    </a>
                                </h6>
                            </div>
                            <div class="form-set-login or-text mb-3">
                                <h4>OR</h4>
                            </div>
                            <div class="d-flex align-items-center justify-content-center flex-wrap mb-3">
                                <div class="text-center me-2 flex-fill">
                                    <a href="javascript:void(0);"
                                       class="br-10 p-2 px-4 btn bg-pending  d-flex align-items-center justify-content-center">
                                        <img class="img-fluid m-1" src="~/AdminAr/assets/img/icons/facebook-logo.svg"
                                             alt="Facebook">
                                    </a>
                                </div>
                                <div class="text-center me-2 flex-fill">
                                    <a href="javascript:void(0);"
                                       class="br-10 p-2 px-4 btn bg-white d-flex align-items-center justify-content-center">
                                        <img class="img-fluid  m-1" src="~/AdminAr/assets/img/icons/google-logo.svg"
                                             alt="Facebook">
                                    </a>
                                </div>
                                <div class="text-center flex-fill">
                                    <a href="javascript:void(0);"
                                       class="bg-dark br-10 p-2 px-4 btn btn-dark d-flex align-items-center justify-content-center">
                                        <img class="img-fluid  m-1" src="~/AdminAr/assets/img/icons/apple-logo.svg" alt="Apple">
                                    </a>
                                </div>
                            </div>
                            <div class="text-center">
                                <p class="fw-medium text-gray">جميع الحقوق محفوظة &copy; 2024 - Apx</p>
                            </div>
                        </div>
                    </form>


                </div>
            </div>
        </div>

    </div>
    <!-- /Main Wrapper -->
    <!-- jQuery -->
    <script src="~/AdminAr/assets/js/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="~/AdminAr/assets/js/bootstrap.bundle.min.js"></script>

    <!-- Feather Icon JS -->
    <script src="~/AdminAr/assets/js/feather.min.js"></script>

    <!-- Slimscroll JS -->
    <script src="~/AdminAr/assets/js/jquery.slimscroll.min.js"></script>

    <!-- Custom JS -->
    <script src="~/AdminAr/assets/js/script.js"></script>


</body>

</html>

