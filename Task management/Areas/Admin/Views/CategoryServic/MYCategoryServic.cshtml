            </ul>
            <div class="page-btn">
                <a href="#" class="btn btn-added" data-bs-toggle="modal" data-bs-target="#add-CategoryServic"><i data-feather="plus-circle" class="me-2"></i>Add New CategoryServic</a>
            </div>
            <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
            <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
        </div>
        <!-- /product list -->
        <div class="card table-list-card">
            <div class="card-body">
                <div class="table-top">
                    <div class="search-set">
                        <div class="search-input">
                            <a href="" class="btn btn-searchset"><i data-feather="search" class="feather-search"></i></a>
                        </div>
                    </div>
                    <div class="search-path">
                        <a class="btn btn-filter" id="filter_search">
                            <i data-feather="filter" class="filter-icon"></i>
                            <span><img src="~/AdminEn/assets/img/icons/closes.svg" alt="img"></span>
                        </a>
                    </div>
                    <div class="form-sort">
                        <i data-feather="sliders" class="info-img"></i>
                        <select class="select">
                            <option>Sort by Date</option>
                            <option>Newest</option>
                            <option>Oldest</option>
                        </select>
                    </div>
                </div>
                <!-- /Filter -->
                <div class="card" id="filter_inputs">
                    <div class="card-body pb-0">
                        <div class="row">
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="zap" class="info-img"></i>
                                    <select class="select">
                                        <option>Choose CategoryServic</option>
                                        <option>Laptop</option>
                                        <option>Electronics</option>
                                        <option>Shoe</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="calendar" class="info-img"></i>
                                    <div class="input-groupicon">
                                        <input type="text" class="datetimepicker" placeholder="Choose Date">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="stop-circle" class="info-img"></i>
                                    <select class="select">
                                        <option>Choose Status</option>
                                        <option>Active</option>
                                        <option>Inactive</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12 ms-auto">
                                <div class="input-blocks">
                                    <a class="btn btn-filters ms-auto"> <i data-feather="search" class="feather-search"></i> Search </a>
                                </div>
                            </div>
                            <div class="page-title">
                                <span style="color:royalblue"> <strong>@TempData["Saved successfullyl"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Filter -->
                <div class="table-responsive">
                    <table class="table  datanew">
                        <thead>
                            <tr>
                                <th class="no-sort">
                                    <label class="checkboxs">
                                        <input type="checkbox" id="select-all">
                                        <span class="checkmarks"></span>
                                    </label>
                                </th>
                                <th>@ResourceWeb.lbTitleOneAr</th>
                                <th>@ResourceWeb.lbTitleOneEn</th>
                                <th>@ResourceWeb.lbTitleTwoAr</th>
                                <th>@ResourceWeb.lbTitleTwoEn</th>
                                <th>@ResourceWeb.lbTitleThreAr</th>
                                <th>@ResourceWeb.lbTitleThreEn</th>
                                <th>@ResourceWeb.lbTitleForAr</th>
                                <th>@ResourceWeb.lbTitleForEn</th>
                                <th>@ResourceWeb.lbTitlefiveAr</th>
                                <th>@ResourceWeb.lbTitlefiveEn</th>
                                <th>@ResourceWeb.lbTitleButtonAr</th>
                                <th>@ResourceWeb.lbTitleButtonEn</th>
                                <th>@ResourceWeb.lbUrlButtonAr</th>
                                <th>@ResourceWeb.lbUrlButtonEn</th>
                                <th>@ResourceWeb.LbDateTimeEntry</th>
                                <th>@ResourceWeb.LbDataEntry</th>
                                <th>@ResourceWeb.lbCurrentState</th>
                                <th>@ResourceWeb.LbActive</th>
                                <th class="no-sort">@ResourceWeb.LbOpration</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListCategoryServic)
                            {
                                <tr>
                                    <td>
                                        <label class="checkboxs">
                                            <input type="checkbox">
                                            <span class="checkmarks"></span>
                                        </label>
                                    </td>

                                    <td>
                                        <div class="userimgname">
                                            <a href="#" class="userslist-img bg-img">
                                                <img src="@string.Format("/Images/Home/{0}", item.Photo)" alt="product">
                                            </a>
                                            <div>
                                                <a href="#">@item.TitleOneAr</a>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.TitleOneEn</td>
                                    <td>@item.TitleTwoAr</td>
                                    <td>@item.TitleTwoEn</td>
                                    <td>@item.TitleThreAr</td>
                                    <td>@item.TitleThreEn</td>                                                                  
                                    <td>@item.TitleForAr</td>
                                    <td>@item.TitleForEn</td>
                                    <td>@item.TitlefiveAr</td>
                                    <td>@item.TitlefiveEn</td>
                                    <td>@item.TitleButtonAr</td>
                                    <td>@item.TitleButtonEn</td>
                                    <td>@item.UrlButtonAr</td>
                                    <td>@item.UrlButtonEn</td>                              
                                    <td>@item.DateTimeEntry</td>
                                    <td>@item.DataEntry</td>
                                    @if (item.CurrentState == true)
                                    {
                                        <td><span class="badge badge-linesuccess">Active</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-linedanger">DeActive</span></td>
                                    }

                                    @if (item.Active == true)
                                    {
                                        <td><span class="badge badge-linesuccess">Active</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-linedanger">DeActive</span></td>
                                    }

                                    <td class="action-table-data">
                                        <div class="edit-delete-action">
                                       
                                            <a class="me-2 p-2 mb-0" asp-area="Admin" asp-controller="CategoryServic" asp-action="AddEditCategoryServic" asp-route-IdCategoryServic="@item.IdCategoryServic" title="تعديل ">
                                                <i data-feather="zap" class="feather-eye"></i>
                                            </a>
                                            <a class="confirm-text p-2" asp-area="Admin" asp-controller="CategoryServic" asp-action="DeleteData" asp-route-IdCategoryServic="@item.IdCategoryServic">
                                                <i data-feather="trash-2" class="feather-trash-2"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /product list -->
    </div>
</div>
<!-- /Main Wrapper -->
<!-- Add CategoryServic -->
<div class="modal fade" id="add-CategoryServic">
    <div class="modal-dialog modal-dialog-centered custom-modal-two">
        <div class="modal-content">
            <div class="page-wrapper-new p-0">
                <div class="content">
                    <div class="modal-header border-0 custom-modal-header">
                        <div class="page-title">
                            <h4>Create CategoryServic</h4>
                        </div>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body custom-modal-body">
                        <form role="form" method="post" asp-controller="CategoryServic" asp-action="Save" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.CategoryServic.DataEntry" class="form-control" value="@User.Identity.Name">
                                <input type="hidden" asp-for="@Model.CategoryServic.IdCategoryServic" class="form-control">
                                <input type="hidden" asp-for="@Model.CategoryServic.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">
                                <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.TitleOneAr">@ResourceWeb.lbTitleOneAr</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.TitleOneAr">
                                <span asp-validation-for="@Model.CategoryServic.TitleOneAr" class="text-danger"></span>
                                <span style="color:red"> <strong>@TempData["TitleOneAr"]</strong></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.TitleOneEn">@ResourceWeb.lbTitleOneEn</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.TitleOneEn">
                                <span asp-validation-for="@Model.CategoryServic.TitleOneEn" class="text-danger"></span>
                                <span style="color:red"> <strong>@TempData["TitleOneEn"]</strong></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.TitleTwoAr">@ResourceWeb.lbTitleTwoAr</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.TitleTwoAr">
                                <span asp-validation-for="@Model.CategoryServic.TitleTwoAr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.TitleTwoEn">@ResourceWeb.lbTitleTwoEn</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.TitleTwoEn">
                                <span asp-validation-for="@Model.CategoryServic.TitleTwoEn" class="text-danger"></span> 
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.TitleThreAr">@ResourceWeb.lbTitleThreAr</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.TitleThreAr">
                                <span asp-validation-for="@Model.CategoryServic.TitleThreAr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.TitleThreEn">@ResourceWeb.lbTitleThreEn</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.TitleThreEn">
                                <span asp-validation-for="@Model.CategoryServic.TitleThreEn" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.TitleForAr">@ResourceWeb.lbTitleForAr</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.TitleForAr">
                                <span asp-validation-for="@Model.CategoryServic.TitleForAr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.TitleForEn">@ResourceWeb.lbTitleForEn</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.TitleForEn">
                                <span asp-validation-for="@Model.CategoryServic.TitleForEn" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.TitlefiveAr">@ResourceWeb.lbTitlefiveAr</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.TitlefiveAr">
                                <span asp-validation-for="@Model.CategoryServic.TitlefiveAr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.TitlefiveEn">@ResourceWeb.lbTitlefiveEn</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.TitlefiveEn">
                                <span asp-validation-for="@Model.CategoryServic.TitlefiveEn" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.TitleButtonAr">@ResourceWeb.lbTitleButtonAr</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.TitleButtonAr">
                                <span asp-validation-for="@Model.CategoryServic.TitleButtonAr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.TitleButtonEn">@ResourceWeb.lbTitleButtonEn</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.TitleButtonEn">
                                <span asp-validation-for="@Model.CategoryServic.TitleButtonEn" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.UrlButtonAr">@ResourceWeb.lbUrlButtonAr</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.UrlButtonAr">
                                <span asp-validation-for="@Model.CategoryServic.UrlButtonAr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CategoryServic.UrlButtonEn">@ResourceWeb.lbUrlButtonEn</label>
                                <input type="text" class="form-control" asp-for="@Model.CategoryServic.UrlButtonEn">
                                <span asp-validation-for="@Model.CategoryServic.UrlButtonEn" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <div class="card-content">
                                    <div class="form-group">
                                        <p><input type="file" accept="image/*" name="Files" id="file" onchange="loadFile(event)" style="display: none;"></p>
                                        <p><label for="file" class="badge rounded-pill bg-outline-info" style="cursor: pointer;" name="Files">@ResourceWeb.LBUpload_image</label></p>
                                        <p><img id="output" width="450" height="300" /></p>
                                        <span style="color:red"><strong>@TempData["Message"]</strong></span>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-0">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="@Model.CategoryServic.Active" role="switch" id="flexSwitchCheckChecked" checked="">
                                    <label class="form-check-label" for="flexSwitchCheckChecked">
                                        التفعيل
                                    </label>
                                </div>
                            </div>
                            <div class="mb-0">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="@Model.CategoryServic.CurrentState" role="switch" id="flexSwitchCheckChecked" checked="">
                                    <label class="form-check-label" for="flexSwitchCheckChecked">
                                        الحالة
                                    </label>
                                </div>
                            </div>
                            <div class="modal-footer-btn">
                                <button type="button" class="btn btn-cancel me-2" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-submit">Create CategoryServic</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Add CategoryServic -->
<!-- Edit CategoryServic -->
@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);

            // حفظ اسم الصورة في الحقل المخفي (CategoryServic-photo)
            var file = event.target.files[0];
            var fileName = file.name;  // الحصول على اسم الصورة فقط

            // تحديث الحقل المخفي باسم الصورة
            document.getElementById('CategoryServic-photo').value = fileName;
        };
    </script>

    <script>
        $("#url").val(window.location.href);
    </script>

    
}