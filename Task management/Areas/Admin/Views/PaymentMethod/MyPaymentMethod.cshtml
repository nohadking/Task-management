@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBMyPaymentMethod;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="add-item d-flex">
                <div class="page-title">
                    <h4>PaymentMethod</h4>
                    <h6>Manage your categories</h6>
                </div>
            </div>
            <ul class="table-top-head">
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Pdf"><img src="~/AdminEn/assets/img/icons/pdf.svg" alt="img"></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Excel"><img src="~/AdminEn/assets/img/icons/excel.svg" alt="img"></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Print"><i data-feather="printer" class="feather-rotate-ccw"></i></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Refresh"><i data-feather="rotate-ccw" class="feather-rotate-ccw"></i></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Collapse" id="collapse-header"><i data-feather="chevron-up" class="feather-chevron-up"></i></a>
                </li>
            </ul>
            <div class="page-btn">
                <a href="#" class="btn btn-added" data-bs-toggle="modal" data-bs-target="#add-PaymentMethod"><i data-feather="plus-circle" class="me-2"></i>Add New PaymentMethod</a>
            </div>
        </div>
        <!-- /product list -->
        <div class="card table-list-card">
            <div class="card-body">
                <div class="table-top">
                    <div class="search-set">
                        <div class="search-input">
                            <a href="" class="btn btn-searchset"><i data-feather="search" class="feather-search"></i></a>
                        </div>
                    </div>
                    <div class="search-path">
                        <a class="btn btn-filter" id="filter_search">
                            <i data-feather="filter" class="filter-icon"></i>
                            <span><img src="~/AdminEn/assets/img/icons/closes.svg" alt="img"></span>
                        </a>
                    </div>
                    <div class="form-sort">
                        <i data-feather="sliders" class="info-img"></i>
                        <select class="select">
                            <option>Sort by Date</option>
                            <option>Newest</option>
                            <option>Oldest</option>
                        </select>
                    </div>
                </div>
                <!-- /Filter -->
                <div class="card" id="filter_inputs">
                    <div class="card-body pb-0">
                        <div class="row">
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="zap" class="info-img"></i>
                                    <select class="select">
                                        <option>Choose PaymentMethod</option>
                                        <option>Laptop</option>
                                        <option>Electronics</option>
                                        <option>Shoe</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="calendar" class="info-img"></i>
                                    <div class="input-groupicon">
                                        <input type="text" class="datetimepicker" placeholder="Choose Date">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="stop-circle" class="info-img"></i>
                                    <select class="select">
                                        <option>Choose Status</option>
                                        <option>Active</option>
                                        <option>Inactive</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12 ms-auto">
                                <div class="input-blocks">
                                    <a class="btn btn-filters ms-auto"> <i data-feather="search" class="feather-search"></i> Search </a>
                                </div>
                            </div>
                            <div class="page-title">
                                <span style="color:royalblue"> <strong>@TempData["Saved successfullyl"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Filter -->
                <div class="table-responsive">
                    <table class="table  datanew">
                        <thead>
                            <tr>
                                <th class="no-sort">
                                    <label class="checkboxs">
                                        <input type="checkbox" id="select-all">
                                        <span class="checkmarks"></span>
                                    </label>
                                </th>
                                <th>@ResourceWeb.lbPaymentMethodAr</th>
                                <th>@ResourceWeb.lbPaymentMethodEn</th>
                                <th>@ResourceWeb.LbDateTimeEntry</th>
                                <th>@ResourceWeb.LbDataEntry</th>
                                <th>@ResourceWeb.lbCurrentState</th>
                                <th>@ResourceWeb.LbActive</th>
                                <th class="no-sort">@ResourceWeb.LbOpration</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListPaymentMethod)
                            {
                                <tr>
                                    <td>
                                        <label class="checkboxs">
                                            <input type="checkbox">
                                            <span class="checkmarks"></span>
                                        </label>
                                    </td>

                                   
                                      
                                    <td>@item.PaymentMethodAr</td>
                                    <td>@item.PaymentMethodEn</td>
                                    <td>@item.DateTimeEntry</td>
                                    <td>@item.DataEntry</td>
                                    <td>@item.CurrentState</td>
                                    @if (item.Active == true)
                                    {
                                        <td><span class="badge badge-linesuccess">Active</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-linedanger">DeActive</span></td>
                                    }

                                    <td class="action-table-data">

                                        <a class="me-2 p-2 mb-0" asp-area="Admin" asp-controller="PaymentMethod" asp-action="AddPaymentMethod" asp-route-IdPaymentMethod="@item.IdPaymentMethod" title="تعديل ">
                                                <i data-feather="zap" class="feather-eye"></i>
                                            </a>
                                            <a class="confirm-text p-2" asp-area="Admin" asp-controller="PaymentMethod" asp-action="DeleteData" asp-route-IdPaymentMethod="@item.IdPaymentMethod">
                                                <i data-feather="trash-2" class="feather-trash-2"></i>
                                            </a>
                                        
                                   
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>



            </div>
        </div>
        <!-- /product list -->
    </div>
</div>

<!-- /Main Wrapper -->
<!-- Add PaymentMethod -->
<div class="modal fade" id="add-PaymentMethod">
    <div class="modal-dialog modal-dialog-centered custom-modal-two">
        <div class="modal-content">
            <div class="page-wrapper-new p-0">
                <div class="content">
                    <div class="modal-header border-0 custom-modal-header">
                        <div class="page-title">
                            <h4>Create PaymentMethod</h4>
                        </div>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body custom-modal-body">
                        <form role="form" method="post" asp-controller="PaymentMethod" asp-action="Save" enctype="multipart/form-data">

                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.PaymentMethod.DataEntry" class="form-control" value="@User.Identity.Name">
                                <input type="hidden" asp-for="@Model.PaymentMethod.IdPaymentMethod" class="form-control">
                                <input type="hidden" asp-for="@Model.PaymentMethod.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">
                                <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>


                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.PaymentMethod.PaymentMethodAr">@ResourceWeb.lbPaymentMethodAr</label>
                                <input type="text" class="form-control" asp-for="@Model.PaymentMethod.PaymentMethodAr">
                                <span asp-validation-for="@Model.PaymentMethod.PaymentMethodAr" class="text-danger"></span>
                                <span style="color:red"> <strong>@TempData["PaymentMethodAr"]</strong></span>
                            </div>



                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.PaymentMethod.PaymentMethodEn">@ResourceWeb.lbPaymentMethodEn</label>
                                <input type="text" class="form-control" asp-for="@Model.PaymentMethod.PaymentMethodEn">
                                <span asp-validation-for="@Model.PaymentMethod.PaymentMethodEn" class="text-danger"></span>
                                <span style="color:red"> <strong>@TempData["PaymentMethodEn"]</strong></span>
                            </div>
                         

                            <div class="mb-0">
                                <div class="status-toggle modal-status d-flex justify-content-between align-items-center">
                                    <span class="status-label">Status</span>
                                    <input type="checkbox" id="user2" asp-for="@Model.PaymentMethod.CurrentState" class="check" checked="">
                                    <label for="user2" class="checktoggle"></label>
                                </div>
                            </div>
                            <div class="mb-0">
                                <div class="status-toggle modal-status d-flex justify-content-between align-items-center">
                                    <span class="status-label">Active</span>
                                    <input type="checkbox" id="user2" asp-for="@Model.PaymentMethod.Active" class="check" checked="">
                                    <label for="user2" class="checktoggle"></label>
                                </div>
                            </div>
                            <div class="modal-footer-btn">
                                <button type="button" class="btn btn-cancel me-2" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-submit">Create PaymentMethod</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Add PaymentMethod -->
<!-- Edit PaymentMethod -->








<div class="modal fade" id="edit-PaymentMethod">
    <div class="modal-dialog modal-dialog-centered custom-modal-two">
        <div class="modal-content">
            <div class="page-wrapper-new p-0">
                <div class="content">
                    <div class="modal-header border-0 custom-modal-header">
                        <div class="page-title">
                            <h4>Edit PaymentMethod</h4>
                        </div>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body custom-modal-body">
                        <form role="form" method="post" asp-controller="PaymentMethod" asp-action="Savej" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.PaymentMethod.DataEntry" class="form-control" value="@User.Identity.Name">
                                <input type="hidden" asp-for="@Model.PaymentMethod.IdPaymentMethod" class="form-control" id="PaymentMethod-id">
                               
                                <input type="hidden" asp-for="@Model.PaymentMethod.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">

                                <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>

                                <div class="mb-3">
                                    <label class="form-label">PaymentMethod</label>
                                    <input type="text" id="PaymentMethod-name-ar" asp-for="@Model.PaymentMethod.PaymentMethodAr" name="PaymentMethodNameAr" class="form-control" value="">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">PaymentMethod Slug</label>
                                    <input type="text" id="PaymentMethod-name-en" asp-for="@Model.PaymentMethod.PaymentMethodEn" name="PaymentMethodNameEn" class="form-control" value="">
                                </div>

                               

                                <div class="mb-0">
                                    <div class="status-toggle modal-status d-flex justify-content-between align-items-center">
                                        <span class="status-label">Status</span>
                                        <input type="checkbox" id="PaymentMethod-active" asp-for="@Model.PaymentMethod.Active" name="Active" class="check">
                                        <label for="PaymentMethod-active" class="checktoggle"></label>
                                    </div>
                                </div>

                                <div class="mb-0">
                                    <div class="status-toggle modal-status d-flex justify-content-between align-items-center">
                                        <span class="status-label">Current State</span>
                                        <input type="checkbox" id="PaymentMethod-CurrentState" asp-for="@Model.PaymentMethod.CurrentState" name="CurrentState" class="check">
                                        <label for="PaymentMethod-CurrentState" class="checktoggle"></label>
                                    </div>
                                </div>

                                <div class="modal-footer-btn">
                                    <button type="button" class="btn btn-cancel me-2" data-bs-dismiss="modal">Cancel</button>
                                    @*   <button type="submit" class="btn btn-submit">Save Changes</button> *@
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
   

    <script>
        $("#url").val(window.location.href);
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var editPaymentMethodModal = document.getElementById('edit-PaymentMethod');
            editPaymentMethodModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;

                // استخراج البيانات من الـ data-attributes
                var PaymentMethodId = button.getAttribute('data-PaymentMethod-id');
                var PaymentMethodNameAr = button.getAttribute('data-PaymentMethod-name-ar');
                var PaymentMethodNameEn = button.getAttribute('data-PaymentMethod-name-en');
             
                var PaymentMethodActive = button.getAttribute('data-PaymentMethod-active') === "true";
                var PaymentMethodCurrentState = button.getAttribute('data-PaymentMethod-currentstate') === "true";

                // تعبئة حقول المودال
                var modal = editPaymentMethodModal;
                modal.querySelector('#PaymentMethod-id').value = PaymentMethodId;
                modal.querySelector('#PaymentMethod-name-ar').value = PaymentMethodNameAr;
                modal.querySelector('#PaymentMethod-name-en').value = PaymentMethodNameEn;
               
                modal.querySelector('#PaymentMethod-active').checked = PaymentMethodActive;
                modal.querySelector('#PaymentMethod-CurrentState').checked = PaymentMethodCurrentState;

               
            });
        });
    </script>
}

