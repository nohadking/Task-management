                            </div>
                            <div class="mb-3">
                                <label asp-for="@Model.LevelForeAccount.IdMainAccount">الحساب الرئيسي</label>


@*                                 <select id="mainAccountSelect" class="form-select" asp-for="@Model.LevelForeAccount.IdMainAccount"
                                        asp-items="@(new SelectList(ViewBag.minAccount, "IdMainAccount", "AccountName"))">
                                    <option value="">اختر حساب</option>
                                </select> *@

