@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBMYSupplier;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="add-item d-flex">
                <div class="page-title">
                    <h4>Supplier</h4>
                    <h6>Manage your categories</h6>
                </div>
            </div>
            <ul class="table-top-head">
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Pdf"><img src="~/AdminEn/assets/img/icons/pdf.svg" alt="img"></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Excel"><img src="~/AdminEn/assets/img/icons/excel.svg" alt="img"></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Print"><i data-feather="printer" class="feather-rotate-ccw"></i></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Refresh"><i data-feather="rotate-ccw" class="feather-rotate-ccw"></i></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Collapse" id="collapse-header"><i data-feather="chevron-up" class="feather-chevron-up"></i></a>
                </li>
            </ul>
            <div class="page-btn">
                <a href="#" class="btn btn-added" data-bs-toggle="modal" data-bs-target="#add-Supplier"><i data-feather="plus-circle" class="me-2"></i>Add New Supplier</a>
            </div>
        </div>
        <!-- /product list -->
        <div class="card table-list-card">
            <div class="card-body">
                <div class="table-top">
                    <div class="search-set">
                        <div class="search-input">
                            <a href="" class="btn btn-searchset"><i data-feather="search" class="feather-search"></i></a>
                        </div>
                    </div>
                    <div class="search-path">
                        <a class="btn btn-filter" id="filter_search">
                            <i data-feather="filter" class="filter-icon"></i>
                            <span><img src="~/AdminEn/assets/img/icons/closes.svg" alt="img"></span>
                        </a>
                    </div>
                    <div class="form-sort">
                        <i data-feather="sliders" class="info-img"></i>
                        <select class="select">
                            <option>Sort by Date</option>
                            <option>Newest</option>
                            <option>Oldest</option>
                        </select>
                    </div>
                </div>
                <!-- /Filter -->
                <div class="card" id="filter_inputs">
                    <div class="card-body pb-0">
                        <div class="row">
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="zap" class="info-img"></i>
                                    <select class="select">
                                        <option>Choose Supplier</option>
                                        <option>Laptop</option>
                                        <option>Electronics</option>
                                        <option>Shoe</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="calendar" class="info-img"></i>
                                    <div class="input-groupicon">
                                        <input type="text" class="datetimepicker" placeholder="Choose Date">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="stop-circle" class="info-img"></i>
                                    <select class="select">
                                        <option>Choose Status</option>
                                        <option>Active</option>
                                        <option>Inactive</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12 ms-auto">
                                <div class="input-blocks">
                                    <a class="btn btn-filters ms-auto"> <i data-feather="search" class="feather-search"></i> Search </a>
                                </div>
                            </div>
                            <div class="page-title">
                                <span style="color:royalblue"> <strong>@TempData["Saved successfullyl"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Filter -->
                <div class="table-responsive">
                    <table class="table  datanew">
                        <thead>
                            <tr>
                                <th class="no-sort">
                                    <label class="checkboxs">
                                        <input type="checkbox" id="select-all">
                                        <span class="checkmarks"></span>
                                    </label>
                                </th>
                                <th>@ResourceWeb.lbSupplierName</th>
                                <th>@ResourceWeb.lbNumberAccount</th>
                                <th>@ResourceWeb.lbPaymentMethodAr</th>
                                <th>@ResourceWeb.lbSpecialization</th>
                                <th>@ResourceWeb.lbPhone</th>
                                <th>@ResourceWeb.lbMobile</th>
                                <th>@ResourceWeb.lbNameOner</th>
                                <th>@ResourceWeb.lbPhoneOner</th>
                                <th>@ResourceWeb.lbEmailOner</th>
                                <th>@ResourceWeb.LbEmailCompany</th>
                                <th>@ResourceWeb.lbAddress</th>
                                <th>@ResourceWeb.lbDebtlimit</th>
                                <th>@ResourceWeb.LbGracePeriod</th>
                                <th>@ResourceWeb.Lbwebsite</th>                
                                <th>@ResourceWeb.LbDateTimeEntry</th>
                                <th>@ResourceWeb.LbDataEntry</th>
                                <th>@ResourceWeb.LbActive</th>
                                <th>@ResourceWeb.lbCurrentState</th>
                                <th class="no-sort">@ResourceWeb.LbOpration</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListViewSupplier)
                            {
                                <tr>
                                    <td>
                                        <label class="checkboxs">
                                            <input type="checkbox">
                                            <span class="checkmarks"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <div class="userimgname">
                                            <a href="#" class="userslist-img bg-img">
                                                <img src="@string.Format("/Images/Home/{0}", item.Photo)" alt="product">
                                            </a>
                                            <div>
                                                <a href="#">@item.SupplierName</a>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.NumberAccount</td>
                                    <td>@item.PaymentMethodAr</td>
                                    <td>@item.Specialization</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Mobile</td>
                                    <td>@item.NameOner</td>
                                    <td>@item.PhoneOner</td>
                                    <td>@item.EmailOner</td>
                                    <td>@item.EmailCompany</td>
                                    <td class="truncate-50">@item.Address</td>
                                    <td class="truncate-50">@item.Debtlimit</td>
                                    <td class="truncate-50">@item.GracePeriod</td>
                                    <td class="truncate-50">@item.website</td>                      
                                    <td>@item.DateTimeEntry</td>
                                    <td>@item.DataEntry</td>
                                    @if (item.Active == true)
                                    {
                                        <td><span class="badge badge-linesuccess">Active</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-linedanger">DeActive</span></td>
                                    }
                                    @if (item.CurrentState == true)
                                    {
                                        <td><span class="badge badge-linesuccess">Active</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-linedanger">DeActive</span></td>
                                    }
                                    <td class="action-table-data">
                                        <div class="edit-delete-action">

                                            <a class="me-2 p-2 mb-0" asp-area="Admin" asp-controller="Supplier" asp-action="AddEditSupplier" asp-route-IdSupplier="@item.IdSupplier" title="تعديل ">
                                                <i data-feather="zap" class="feather-eye"></i>
                                            </a>
                                            <a class="confirm-text p-2" asp-area="Admin" asp-controller="Supplier" asp-action="DeleteData" asp-route-IdSupplier="@item.IdSupplier">
                                                <i data-feather="trash-2" class="feather-trash-2"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /product list -->
    </div>
</div>
<!-- /Main Wrapper -->
<!-- Add Supplier -->
<div class="modal fade" id="add-Supplier">
    <div class="modal-dialog modal-dialog-centered custom-modal-two">
        <div class="modal-content">
            <div class="page-wrapper-new p-0">
                <div class="content">
                    <div class="modal-header border-0 custom-modal-header">
                        <div class="page-title">
                            <h4>Create Supplier</h4>
                        </div>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body custom-modal-body">
                        <form role="form" method="post" asp-controller="Supplier" asp-action="Save" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.Supplier.DataEntry" class="form-control" value="@User.Identity.Name">
                                <input type="hidden" asp-for="@Model.Supplier.IdSupplier" class="form-control">
                                <input type="hidden" asp-for="@Model.Supplier.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">
                                <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Supplier.SupplierName">@ResourceWeb.lbSupplierName</label>
                                <input type="text" class="form-control" asp-for="@Model.Supplier.SupplierName">
                                <span asp-validation-for="@Model.Supplier.SupplierName" class="text-danger"></span>
                                <span style="color:red"> <strong>@TempData["Suppliers"]</strong></span>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputEmail1">تابع لحساب</label>
                                <select class="form-select" asp-items="@(new SelectList(ViewBag.BLevelThreeAccount, "IdLevelThreeAccount", "NameLevelThreeAccounts"))" id="IdLevelThreeAccount">
                                </select>
                               
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="Supplier.NumberAccount">@ResourceWeb.lbNumberAccount</label>
                                <input type="text" class="form-control" asp-for="Supplier.NumberAccount" id="Supplier_NumberAccount" readonly>
                                <span asp-validation-for="Supplier.NumberAccount" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="@Model.Supplier.IdPaymentMethod" for="exampleInputEmail1">أسلوب  التعامل </label>
                                <select class="form-select" asp-for="@Model.Supplier.IdPaymentMethod" asp-items="@(new SelectList(ViewBag.paymentMethod, "IdPaymentMethod", "PaymentMethodAr"))">
                                </select>
                                <span asp-validation-for="@Model.Supplier.IdPaymentMethod" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Supplier.Specialization">@ResourceWeb.lbSpecialization</label>
                                <input type="text" class="form-control" asp-for="@Model.Supplier.Specialization" maxlength="500">
                                <span asp-validation-for="@Model.Supplier.Specialization" class="text-danger"></span>
                             
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Supplier.Phone">@ResourceWeb.lbPhone</label>
                                <input type="text" class="form-control" asp-for="@Model.Supplier.Phone">
                                <span asp-validation-for="@Model.Supplier.Phone" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Supplier.Mobile">@ResourceWeb.lbMobile</label>
                                <input type="text" class="form-control" asp-for="@Model.Supplier.Mobile">
                                <span asp-validation-for="@Model.Supplier.Mobile" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Supplier.NameOner">@ResourceWeb.lbNameOner</label>
                                <input type="text" class="form-control" asp-for="@Model.Supplier.NameOner">
                                <span asp-validation-for="@Model.Supplier.NameOner" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Supplier.PhoneOner">@ResourceWeb.lbPhoneOner</label>
                                <input type="text" class="form-control" asp-for="@Model.Supplier.PhoneOner">
                                <span asp-validation-for="@Model.Supplier.PhoneOner" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Supplier.EmailOner">@ResourceWeb.lbEmailOner</label>
                                <input type="email" class="form-control" asp-for="@Model.Supplier.EmailOner">
                                <span asp-validation-for="@Model.Supplier.EmailOner" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Supplier.EmailCompany">@ResourceWeb.LbEmailCompany</label>
                                <input type="email" class="form-control" asp-for="@Model.Supplier.EmailCompany">
                                <span asp-validation-for="@Model.Supplier.EmailCompany" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Supplier.Address">@ResourceWeb.lbAddress</label>
                                <textarea class="form-control" asp-for="@Model.Supplier.Address"></textarea>
                                <span asp-validation-for="@Model.Supplier.Address" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Supplier.Debtlimit">@ResourceWeb.lbDebtlimit</label>
                                <textarea class="form-control" asp-for="@Model.Supplier.Debtlimit"></textarea>
                                <span asp-validation-for="@Model.Supplier.Debtlimit" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Supplier.GracePeriod">@ResourceWeb.LbGracePeriod</label>
                                <textarea class="form-control" asp-for="@Model.Supplier.GracePeriod"></textarea>
                                <span asp-validation-for="@Model.Supplier.GracePeriod" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.Supplier.website">@ResourceWeb.Lbwebsite</label>
                                <textarea class="form-control" asp-for="@Model.Supplier.website"></textarea>
                                <span asp-validation-for="@Model.Supplier.website" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <div class="card-content">
                                    <div class="form-group">
                                        <p><input type="file" accept="image/*" name="Files" id="file" onchange="loadFile(event)" style="display: none;"></p>
                                        <p><label for="file" class="badge rounded-pill bg-outline-info" style="cursor: pointer;" name="Files">@ResourceWeb.LBUpload_image</label></p>
                                        <p><img id="output" width="450" height="300" /></p>
                                        <span style="color:red"><strong>@TempData["Message"]</strong></span>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-0">
                                <div class="status-toggle modal-status d-flex justify-content-between align-items-center">
                                    <span class="status-label">Active</span>
                                    <input type="checkbox" id="user2" asp-for="@Model.Supplier.Active" class="check" checked="">
                                    <label for="user2" class="checktoggle"></label>
                                </div>
                            </div>
                            <div class="mb-0">
                                <div class="status-toggle modal-status d-flex justify-content-between align-items-center">
                                    <span class="status-label">Status</span>
                                    <input type="checkbox" id="user2" asp-for="@Model.Supplier.CurrentState" class="check" checked="">
                                    <label for="user2" class="checktoggle"></label>
                                </div>
                            </div>
                            <div class="modal-footer-btn">
                                <button type="button" class="btn btn-cancel me-2" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-submit">Create Supplier</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Add Supplier -->

@section Scripts {
    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);

            // حفظ اسم الصورة في الحقل المخفي (category-photo)
            var file = event.target.files[0];
            var fileName = file.name;  // الحصول على اسم الصورة فقط

            // تحديث الحقل المخفي باسم الصورة
            document.getElementById('category-photo').value = fileName;
        };
    </script>

    <script>
        $("#url").val(window.location.href);
    </script>
    <script>
    document.getElementById("IdLevelThreeAccount").addEventListener("change", function() {
    var idLevelThreeAccount = this.value; // القيمة التي تم اختيارها

    if (idLevelThreeAccount) {
        // إرسال القيمة إلى الكنترول عبر AJAX
                fetch(`/Admin/Supplier/GetNumberAccount?idLevelThreeAccount=${idLevelThreeAccount}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // تحديث حقل NumberAccount بالقيمة الجديدة
                    document.getElementById("Supplier_NumberAccount").value = data.numberAccount;
                } else {
                    alert(data.message); // في حال فشل العملية
                }
            })
            .catch(error => console.error('Error:', error));
    }
});
    </script>
}

