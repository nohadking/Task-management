@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddEditCompanyInformation;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<form class="flex-fill" method="post" asp-controller="CompanyInformation" asp-action="Save" enctype="multipart/form-data">
    <div class="page-wrapper cardhead">
        <div class="content container-fluid">

            <!-- Page Header -->
            <div class="page-header">
                <div class="row">
                    <div class="col">
                        <h3 class="page-title">Basic Inputs</h3>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                            <li class="breadcrumb-item active">Basic Inputs</li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /Page Header -->
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Basic Inputs</h5>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="@Model.CompanyInformation.DataEntry" class="form-control" value="@User.Identity.Name">
                            <input type="hidden" asp-for="@Model.CompanyInformation.IdCompanyInformation" class="form-control">
                            <input type="hidden" asp-for="@Model.CompanyInformation.Photo" class="form-control">
                            <input type="hidden" asp-for="@Model.CompanyInformation.DateTimeEntry" value="@DateTime.Now">
                            <input type="hidden" asp-for="@Model.returnUrl" id="url">
                            <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                            <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbNameCompanyAr</label>
                                        <input type="text" asp-for="@Model.CompanyInformation.NameCompanyAr" placeholder="@ResourceWeb.lbNameCompanyAr" class="form-control" maxlength="300">
                                        <span asp-validation-for="@Model.CompanyInformation.NameCompanyAr" class="text-danger"></span>
                                        <span style="color:red"> <strong>@TempData["NameCompanyAr"]</strong></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbNameCompanyEn</label>
                                        <input type="text" asp-for="@Model.CompanyInformation.NameCompanyEn" placeholder="@ResourceWeb.lbNameCompanyEn" class="form-control" maxlength="300">
                                        <span asp-validation-for="@Model.CompanyInformation.NameCompanyEn" class="text-danger"></span>
                                        <span style="color:red"> <strong>@TempData["NameCompanyEn"]</strong></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbPhone</label>
                                        <input type="text" asp-for="@Model.CompanyInformation.Phone" placeholder="@ResourceWeb.lbPhone" class="form-control" maxlength="20">
                                        <span asp-validation-for="@Model.CompanyInformation.Phone" class="text-danger"></span>                              
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbMobile</label>
                                        <input type="text" asp-for="@Model.CompanyInformation.Mobile" placeholder="@ResourceWeb.lbMobile" class="form-control" maxlength="20">
                                        <span asp-validation-for="@Model.CompanyInformation.Mobile" class="text-danger"></span>                                       
                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbNameOner</label>
                                        <input type="text" asp-for="@Model.CompanyInformation.NameOner" placeholder="@ResourceWeb.lbNameOner" class="form-control" maxlength="300">
                                        <span asp-validation-for="@Model.CompanyInformation.NameOner" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbPhoneOner</label>
                                        <input type="text" asp-for="@Model.CompanyInformation.PhoneOner" placeholder="@ResourceWeb.lbPhoneOner" class="form-control" maxlength="20">
                                        <span asp-validation-for="@Model.CompanyInformation.PhoneOner" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbEmailOner</label>
                                        <input type="email" asp-for="@Model.CompanyInformation.EmailOner" placeholder="@ResourceWeb.lbEmailOner" class="form-control" maxlength="300">
                                        <span asp-validation-for="@Model.CompanyInformation.EmailOner" class="text-danger"></span>
                                    </div>

                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.LbEmailCompany</label>
                                        <input type="email" asp-for="@Model.CompanyInformation.EmailCompany" placeholder="@ResourceWeb.LbEmailCompany" class="form-control" maxlength="300">
                                        <span asp-validation-for="@Model.CompanyInformation.EmailCompany" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbShortDescriptionAr</label>
                                        <textarea asp-for="@Model.CompanyInformation.ShortDescriptionAr" placeholder="@ResourceWeb.lbShortDescriptionAr" class="form-control" maxlength="500"rows="5"></textarea>
                                        <span asp-validation-for="@Model.CompanyInformation.ShortDescriptionAr" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbShortDescriptionEn</label>
                                        <textarea asp-for="@Model.CompanyInformation.ShortDescriptionEn" placeholder="@ResourceWeb.lbShortDescriptionEn" class="form-control" maxlength="500" rows="5"></textarea>
                                        <span asp-validation-for="@Model.CompanyInformation.ShortDescriptionEn" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.LbDescriptionAr</label>
                                        <textarea asp-for="@Model.CompanyInformation.DescriptionAr" placeholder="@ResourceWeb.LbDescriptionAr" class="form-control" maxlength="2000" rows="5"></textarea>
                                        <span asp-validation-for="@Model.CompanyInformation.DescriptionAr" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.LbDescriptionEn</label>
                                        <textarea asp-for="@Model.CompanyInformation.DescriptionEn" placeholder="@ResourceWeb.LbDescriptionEn" class="form-control" maxlength="2000" rows="5"></textarea>
                                        <span asp-validation-for="@Model.CompanyInformation.DescriptionEn" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.LbAddressAr</label>
                                        <input type="text" asp-for="@Model.CompanyInformation.AddressAr" placeholder="@ResourceWeb.LbAddressAr" class="form-control" maxlength="300">
                                        <span asp-validation-for="@Model.CompanyInformation.AddressAr" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.LbAddressEn</label>
                                        <input type="text" asp-for="@Model.CompanyInformation.AddressEn" placeholder="@ResourceWeb.LbAddressEn" class="form-control" maxlength="300">
                                        <span asp-validation-for="@Model.CompanyInformation.AddressEn" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbFaceBoock</label>
                                        <input type="text" asp-for="@Model.CompanyInformation.FaceBoock" placeholder="@ResourceWeb.lbFaceBoock" class="form-control" maxlength="500">
                                        <span asp-validation-for="@Model.CompanyInformation.FaceBoock" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbInstagram</label>
                                        <input type="text" asp-for="@Model.CompanyInformation.Instagram" placeholder="@ResourceWeb.lbInstagram" class="form-control" maxlength="500">
                                        <span asp-validation-for="@Model.CompanyInformation.Instagram" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbYouTube</label>
                                        <input type="text" asp-for="@Model.CompanyInformation.YouTube" placeholder="@ResourceWeb.lbYouTube" class="form-control" maxlength="500">
                                        <span asp-validation-for="@Model.CompanyInformation.YouTube" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbMabs</label>
                                        <input type="text" asp-for="@Model.CompanyInformation.Mabs" placeholder="@ResourceWeb.lbMabs" class="form-control" maxlength="500">
                                        <span asp-validation-for="@Model.CompanyInformation.Mabs" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content" style="margin-top:50px">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="@Model.CompanyInformation.CurrentState" role="switch" id="flexSwitchCheckChecked" checked="">
                                            <label class="form-check-label" for="flexSwitchCheckChecked">
                                                "@Model.CompanyInformation.CurrentState /الحالة
                                            </label>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>



                    </div>






                </div>
            </div>
        </div>
    </div>




    <div class="page-wrapper cardhead" style="margin-top:-50px">
        <div class="content container-fluid">

            <!-- Page Header -->
            <!-- /Page Header -->

            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Olde Photo</h5>
                        </div>



                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">





                                    <div class="card-content">
                                        <div class="row small-spacing">
                                            <div class="col-lg-6 col-xs-6">
                                                <div class="custom-file-container" data-upload-id="myFirstImage">
                                                    <label>
                                                        <a href="javascript:void(0)" class="custom-file-container__image-clear" title="Clear Image"></a>
                                                    </label>

                                                    <label class="custom-file-container__custom-file">
                                                        <input type="file" class="custom-file-container__custom-file__custom-file-input" name="Files" id="file" onchange="loadFile(event)">
                                                        <input type="hidden" name="MAX_FILE_SIZE" value="10485760">
                                                        <img id="output" width="100" height="100" />
                                                    </label>
                                                </div>

                                            </div>
                                            <div class="col-lg-6 col-xs-6">
                                                <div class="form-group">
                                                    <input type="hidden" asp-for="@Model.CompanyInformation.Photo" for="exampleInputEmail1"></input>
                                                    <p><img src="@string.Format("/Images/Home/{0}",Model.CompanyInformation.Photo)" id="output" width="100" height="100" /></p>
                                                </div>
                                                <span class="custom-file-container__custom-file__custom-file-control"></span>

                                                <div class="custom-file-container__image-preview"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mb-4">



                            <button class="btn btn-secondary" type="submit">@ResourceWeb.lbSave</button>
                        </div>


                    </div>
                </div>
            </div>
        </div>

    </div>

</form>
@section Scripts {
    <script>
        var loadFile = function (event) {
            var output = document.getElementById('output');
            output.src = URL.createObjectURL(event.target.files[0]);
            output.onload = function () {
                URL.revokeObjectURL(output.src); // free memory
            }
        };
    </script>
}

