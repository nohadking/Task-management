<!-- Add LevelThreeAccount -->
<div class="modal fade" id="add-LevelThreeAccount">
    <div class="modal-dialog modal-dialog-centered custom-modal-two">
        <div class="modal-content">
            <div class="page-wrapper-new p-0">
                <div class="content">
                    <div class="modal-header border-0 custom-modal-header">
                        <div class="page-title">
                            <h4>Create LevelThreeAccount</h4>
                        </div>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body custom-modal-body">
                        <form role="form" method="post" asp-controller="LevelThreeAccount" asp-action="Save" enctype="multipart/form-data">

                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.LevelThreeAccount.DataEntry" class="form-control" value="@User.Identity.Name">
                                <input type="hidden" asp-for="@Model.LevelThreeAccount.IdLevelThreeAccount" class="form-control">
                                <input type="hidden" asp-for="@Model.LevelThreeAccount.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">
                                <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="@Model.LevelThreeAccount.IdMainAccount">الحساب الرئيسي</label>
                                <select id="mainAccountSelect" class="form-select" asp-for="@Model.LevelThreeAccount.IdMainAccount"
                                        asp-items="@(new SelectList(ViewBag.minAccount, "IdMainAccount", "AccountName"))">
                                    <option value="">اختر حساب</option>
                                </select>
                                <span asp-validation-for="@Model.LevelThreeAccount.IdMainAccount" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="@Model.LevelThreeAccount.IdLevelTwoAccount">حساب المستوى الثاني</label>
                                <select id="levelTwoAccountSelect" class="form-select" asp-for="@Model.LevelThreeAccount.IdLevelTwoAccount">
                                    <option value="">اختر حساب</option>
                                </select>
                                <span asp-validation-for="@Model.LevelThreeAccount.IdLevelTwoAccount" class="text-danger"></span>
                            </div>



                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.LevelThreeAccount.NumberAccount">@ResourceWeb.lbNumberAccount</label>
                                <input type="text" id="numberAccount" class="form-control" asp-for="@Model.LevelThreeAccount.NumberAccount"
                                       value="@ViewBag.nomberMax">
                                <span asp-validation-for="@Model.LevelThreeAccount.NumberAccount" class="text-danger"></span>
                                <span style="color:red"><strong>@TempData["NumberAccount"]</strong></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.LevelThreeAccount.AccountName">@ResourceWeb.lbAccountName</label>
                                <input type="text" class="form-control" asp-for="@Model.LevelThreeAccount.AccountName">
                                <span asp-validation-for="@Model.LevelThreeAccount.AccountName" class="text-danger"></span>
                                <span style="color:red"> <strong>@TempData["AccountName"]</strong></span>
                            </div>


                            <div class="mb-0">
                                <div class="status-toggle modal-status d-flex justify-content-between align-items-center">
                                    <span class="status-label">Status</span>
                                    <input type="checkbox" id="user2" asp-for="@Model.LevelThreeAccount.CurrentState" class="check" checked="">
                                    <label for="user2" class="checktoggle"></label>
                                </div>
                            </div>
                            <div class="mb-0">
                                <div class="status-toggle modal-status d-flex justify-content-between align-items-center">
                                    <span class="status-label">Active</span>
                                    <input type="checkbox" id="user2" asp-for="@Model.LevelThreeAccount.Active" class="check" checked="">
                                    <label for="user2" class="checktoggle"></label>
                                </div>
                            </div>
                            <div class="modal-footer-btn">
                                <button type="button" class="btn btn-cancel me-2" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-submit">Create LevelThreeAccount</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
