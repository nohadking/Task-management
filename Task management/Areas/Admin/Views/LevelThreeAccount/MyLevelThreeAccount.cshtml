                $(document).ready(function () {
                $("#mainAccountSelect").change(function () {
                    var mainAccountId = $(this).val();
                    $("#levelTwoAccountSelect").empty().append('<option value="">اختر حساب</option>');

                    if (mainAccountId) {
                        $.ajax({
                                    url: '@Url.Action("GetLevelTwoAccounts", "LevelThreeAccount")',
                            type: 'GET',
                            data: { mainAccountId: mainAccountId },
                            success: function (data) {
                                $.each(data, function (index, item) {
                                    $("#levelTwoAccountSelect").append($('<option>', {
                                        value: item.idLevelTwoAccount,
                                        text: item.accountName
                                    }));
                                });
                            }
                        });
                    }
                });
            });




        $(document).ready(function () {
            // عندما يتغير اختيار حساب المستوى الثاني
            $('#levelTwoAccountSelect').change(function () {
                var levelTwoAccountId = $(this).val();

                if (levelTwoAccountId) {
                    // إرسال طلب Ajax لجلب رقم الحساب الأعلى في جدول المستوى الثالث
                    $.ajax({
                        url: '@Url.Action("GetNextAccountNumber", "LevelThreeAccount")', // رابط السيرفر الذي سيقوم بإرجاع الرقم التالي
                        type: 'GET',
                        data: { levelTwoAccountId: levelTwoAccountId },
                        success: function (response) {
                            var newAccountNumber;

                            if (response && response.maxAccountNumber) {
                                // إذا وجدنا رقم حساب تابع، نضيف 1 عليه
                                var maxAccountNumber = response.maxAccountNumber;
                                var newAccountNum = parseInt(maxAccountNumber) + 1;
                                newAccountNumber = newAccountNum.toString().padStart(3, '0');
                            } else {
                                // إذا لم يكن هناك حسابات تابعة، نضيف "001"
                                newAccountNumber = '001';
                            }

                            // تعيين الرقم الجديد في حقل رقم الحساب
                            $('#numberAccount').val(newAccountNumber);
                        },
                        error: function () {
                            alert('حدث خطأ في جلب البيانات');
                        }
                    });
                }
            });
        });
    </script>


 
