@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddLevelThreeAccount;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<form class="flex-fill" method="post" asp-controller="LevelThreeAccount" asp-action="Save" enctype="multipart/form-data">
    <div class="page-wrapper cardhead">
        <div class="content container-fluid">

            <!-- Page Header -->
            <div class="page-header">
                <div class="row">
                    <div class="col">
                        <h3 class="page-title">Basic Inputs</h3>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                            <li class="breadcrumb-item active">Basic Inputs</li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /Page Header -->

            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Basic Inputs</h5>
                        </div>

                        <div class="card-body">


                            <input type="hidden" asp-for="@Model.LevelThreeAccount.DataEntry" class="form-control" value="@User.Identity.Name">
                            <input type="hidden" asp-for="@Model.LevelThreeAccount.IdLevelThreeAccount" class="form-control">
                            <input type="hidden" asp-for="@Model.LevelThreeAccount.DateTimeEntry" value="@DateTime.Now">
                            <input type="hidden" asp-for="@Model.returnUrl" id="url">
                            <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                            <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>



                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-12">
                                        <label asp-for="@Model.LevelThreeAccount.IdMainAccount" for="exampleInputEmail1">الحساب الرئيسي</label>
                                        <select id="mainAccountSelect"  class="form-select" asp-for="@Model.LevelThreeAccount.IdMainAccount" asp-items="@(new SelectList(ViewBag.minAccount, "IdMainAccount", "AccountName"))">
                                        </select>
                                        <span asp-validation-for="@Model.LevelThreeAccount.IdMainAccount" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-12">
                                        <label asp-for="@Model.LevelThreeAccount.IdLevelTwoAccount" for="exampleInputEmail1">حساب المستوى الثاني</label>
                                        <select id="levelTwoAccountSelect" class="form-select" asp-for="@Model.LevelThreeAccount.IdLevelTwoAccount"
                                                asp-items="@(new SelectList(ViewBag.LevelTwoAccount, "IdLevelTwoAccount", "AccountNameLevelTwo"))">
                                            <option value="">اختر حساب</option>
                                        </select>
                                        <span asp-validation-for="@Model.LevelThreeAccount.IdLevelTwoAccount" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>



                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbNumberAccount</label>
                                        <input type="text" asp-for="@Model.LevelThreeAccount.NumberAccount" placeholder="@ResourceWeb.lbNumberAccount" class="form-control" maxlength="300">
                                        <span asp-validation-for="@Model.LevelThreeAccount.NumberAccount" class="text-danger"></span>
                                        <span style="color:red"> <strong>@TempData["NumberAccount"]</strong></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label for="exampleInputEmail1">@ResourceWeb.lbAccountName</label>
                                        <input type="text" asp-for="@Model.LevelThreeAccount.AccountName" placeholder="@ResourceWeb.lbAccountName" class="form-control" maxlength="300">
                                        <span asp-validation-for="@Model.LevelThreeAccount.AccountName" class="text-danger"></span>
                                        <span style="color:red"> <strong>@TempData["AccountName"]</strong></span>
                                    </div>
                                </div>
                            </div>

                            <div class="card-content" style="margin-top:50px">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="@Model.LevelThreeAccount.Active" role="switch" id="flexSwitchCheckChecked" checked="">
                                            <label class="form-check-label" for="flexSwitchCheckChecked">
                                                @Model.LevelThreeAccount.Active /التفعيل
                                            </label>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="card-content" style="margin-top:50px">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="@Model.LevelThreeAccount.CurrentState" role="switch" id="flexSwitchCheckChecked" checked="">
                                            <label class="form-check-label" for="flexSwitchCheckChecked">
                                                @Model.LevelThreeAccount.CurrentState /الحالة
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <div class="page-wrapper cardhead" style="margin-top:-50px">
        <div class="content container-fluid">

            <!-- Page Header -->
            <!-- /Page Header -->

            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Olde Photo</h5>
                        </div>



                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">





                                    <div class="card-content">
                                        <div class="row small-spacing">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mb-4">



                            <button class="btn btn-secondary" type="submit">@ResourceWeb.lbSave</button>
                        </div>


                    </div>
                </div>
            </div>
        </div>

    </div>

</form>
@section Scripts {
    <script>
        var loadFile = function (event) {
            var output = document.getElementById('output');
            output.src = URL.createObjectURL(event.target.files[0]);
            output.onload = function () {
                URL.revokeObjectURL(output.src); // free memory
            }
        };



                        $(document).ready(function () {
                        $("#mainAccountSelect").change(function () {
                            var mainAccountId = $(this).val();
                            $("#levelTwoAccountSelect").empty().append('<option value="">اختر حساب</option>');

                            if (mainAccountId) {
                                $.ajax({
                                            url: '@Url.Action("GetLevelTwoAccounts", "LevelThreeAccount")',
                                    type: 'GET',
                                    data: { mainAccountId: mainAccountId },
                                    success: function (data) {
                                        $.each(data, function (index, item) {
                                            $("#levelTwoAccountSelect").append($('<option>', {
                                                value: item.idLevelTwoAccount,
                                                text: item.accountName
                                            }));
                                        });
                                    }
                                });
                            }
                        });
                    });
    </script>
}

