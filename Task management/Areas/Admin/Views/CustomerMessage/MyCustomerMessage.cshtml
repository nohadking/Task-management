@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBMyCustomerMessage;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="add-item d-flex">
                <div class="page-title">
                    <h4>CustomerMessage</h4>
                    <h6>Manage your categories</h6>
                </div>
            </div>
            <ul class="table-top-head">
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Pdf"><img src="~/AdminEn/assets/img/icons/pdf.svg" alt="img"></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Excel"><img src="~/AdminEn/assets/img/icons/excel.svg" alt="img"></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Print"><i data-feather="printer" class="feather-rotate-ccw"></i></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Refresh"><i data-feather="rotate-ccw" class="feather-rotate-ccw"></i></a>
                </li>
                <li>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Collapse" id="collapse-header"><i data-feather="chevron-up" class="feather-chevron-up"></i></a>
                </li>
            </ul>
            <div class="page-btn">
                <a href="#" class="btn btn-added" data-bs-toggle="modal" data-bs-target="#add-CustomerMessage"><i data-feather="plus-circle" class="me-2"></i>Add New CustomerMessage</a>
            </div>
        </div>
        <!-- /product list -->
        <div class="card table-list-card">
            <div class="card-body">
                <div class="table-top">
                    <div class="search-set">
                        <div class="search-input">
                            <a href="" class="btn btn-searchset"><i data-feather="search" class="feather-search"></i></a>
                        </div>
                    </div>
                    <div class="search-path">
                        <a class="btn btn-filter" id="filter_search">
                            <i data-feather="filter" class="filter-icon"></i>
                            <span><img src="~/AdminEn/assets/img/icons/closes.svg" alt="img"></span>
                        </a>
                    </div>
                    <div class="form-sort">
                        <i data-feather="sliders" class="info-img"></i>
                        <select class="select">
                            <option>Sort by Date</option>
                            <option>Newest</option>
                            <option>Oldest</option>
                        </select>
                    </div>
                </div>
                <!-- /Filter -->
                <div class="card" id="filter_inputs">
                    <div class="card-body pb-0">
                        <div class="row">
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="zap" class="info-img"></i>
                                    <select class="select">
                                        <option>Choose CustomerMessage</option>
                                        <option>Laptop</option>
                                        <option>Electronics</option>
                                        <option>Shoe</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="calendar" class="info-img"></i>
                                    <div class="input-groupicon">
                                        <input type="text" class="datetimepicker" placeholder="Choose Date">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="input-blocks">
                                    <i data-feather="stop-circle" class="info-img"></i>
                                    <select class="select">
                                        <option>Choose Status</option>
                                        <option>Active</option>
                                        <option>Inactive</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12 ms-auto">
                                <div class="input-blocks">
                                    <a class="btn btn-filters ms-auto"> <i data-feather="search" class="feather-search"></i> Search </a>
                                </div>
                            </div>
                            <div class="page-title">
                                <span style="color:royalblue"> <strong>@TempData["Saved successfullyl"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Filter -->
                <div class="table-responsive">
                    <table class="table  datanew">
                        <thead>
                            <tr>
                                <th class="no-sort">
                                    <label class="checkboxs">
                                        <input type="checkbox" id="select-all">
                                        <span class="checkmarks"></span>
                                    </label>
                                </th>
                                <th>@ResourceWeb.lbFullName</th>
                                <th>@ResourceWeb.lbMessageTitle</th>
                                <th>@ResourceWeb.LbPhonenumber</th>
                                <th>@ResourceWeb.LbEmailMessage</th>
                                <th>@ResourceWeb.LbMessage</th>
                                <th>@ResourceWeb.LbDateTimeEntry</th>
                                <th>@ResourceWeb.LbDataEntry</th>
                                <th>@ResourceWeb.lbCurrentState</th>

                                <th class="no-sort">@ResourceWeb.LbOpration</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListCustomerMessage)
                            {
                                <tr>
                                    <td>
                                        <label class="checkboxs">
                                            <input type="checkbox">
                                            <span class="checkmarks"></span>
                                        </label>
                                    </td>
                                    <td>
                                        <div class="userimgname">

                                            <div>
                                                <a href="#">@item.FullName</a>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="truncate-50">@item.MessageTitle</td>
                                    <td class="truncate-50">@item.PhoneNumber</td>
                                    <td class="truncate-50">@item.EmailMessage</td>
                                    <td class="truncate-50">@item.Message</td>
                                    <td>@item.DateTimeEntry</td>
                                    <td>@item.DataEntry</td>

                                    @if (item.CurrentState == true)
                                    {
                                        <td><span class="badge badge-linesuccess">Active</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-linedanger">DeActive</span></td>
                                    }
                                    <td class="action-table-data">
                                        <div class="edit-delete-action">

                                            <a class="me-2 p-2 mb-0" asp-area="Admin" asp-controller="CustomerMessage" asp-action="AddCustomerMessage" asp-route-IdCustomerMessage="@item.IdCustomerMessage" title="تعديل ">
                                                <i data-feather="zap" class="feather-eye"></i>
                                            </a>
                                            <a class="confirm-text p-2" asp-area="Admin" asp-controller="CustomerMessage" asp-action="DeleteData" asp-route-IdCustomerMessage="@item.IdCustomerMessage">
                                                <i data-feather="trash-2" class="feather-trash-2"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /product list -->
    </div>
</div>

<!-- /Main Wrapper -->
<!-- Add CustomerMessage -->
<div class="modal fade" id="add-CustomerMessage">
    <div class="modal-dialog modal-dialog-centered custom-modal-two">
        <div class="modal-content">
            <div class="page-wrapper-new p-0">
                <div class="content">
                    <div class="modal-header border-0 custom-modal-header">
                        <div class="page-title">
                            <h4>Create CustomerMessage</h4>
                        </div>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body custom-modal-body">
                        <form role="form" method="post" asp-controller="CustomerMessage" asp-action="Save" enctype="multipart/form-data">

                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.CustomerMessage.DataEntry" class="form-control" id="DataEntry">
                                <input type="hidden" asp-for="@Model.CustomerMessage.IdCustomerMessage" class="form-control">
                                <input type="hidden" asp-for="@Model.CustomerMessage.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">
                                <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CustomerMessage.FullName">@ResourceWeb.lbFullName</label>
                                <input type="text" class="form-control" asp-for="@Model.CustomerMessage.FullName" id="FullName">
                                <span asp-validation-for="@Model.CustomerMessage.FullName" class="text-danger"></span>

                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CustomerMessage.MessageTitle">@ResourceWeb.lbMessageTitle</label>
                                <input type="text" class="form-control" asp-for="@Model.CustomerMessage.MessageTitle">
                                <span asp-validation-for="@Model.CustomerMessage.MessageTitle" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CustomerMessage.EmailMessage">@ResourceWeb.LbEmailMessage</label>
                                <input type="email" class="form-control" asp-for="@Model.CustomerMessage.EmailMessage">
                                <span asp-validation-for="@Model.CustomerMessage.EmailMessage" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CustomerMessage.PhoneNumber">@ResourceWeb.LbPhonenumber</label>
                                <input type="text" class="form-control" asp-for="@Model.CustomerMessage.PhoneNumber">
                                <span asp-validation-for="@Model.CustomerMessage.PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.CustomerMessage.Message">@ResourceWeb.LbMessage</label>
                                <textarea class="form-control" asp-for="@Model.CustomerMessage.Message"></textarea>
                                <span asp-validation-for="@Model.CustomerMessage.Message" class="text-danger"></span>
                            </div>


                            <div class="mb-0">
                                <div class="status-toggle modal-status d-flex justify-content-between align-items-center">
                                    <span class="status-label">Status</span>
                                    <input type="checkbox" id="user2" asp-for="@Model.CustomerMessage.CurrentState" class="check" checked="">
                                    <label for="user2" class="checktoggle"></label>
                                </div>
                            </div>

                            <div class="modal-footer-btn">
                                <button type="button" class="btn btn-cancel me-2" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-submit">Create CustomerMessage</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Add CustomerMessage -->
<!-- Edit CustomerMessage -->
@section Scripts {
    <script>
        document.getElementById("FullName").addEventListener("input", function() {
            document.getElementById("DataEntry").value = this.value;
        });

        // لتعبئة الحقل المخفي عند تحميل الصفحة في البداية (إذا كان حقل الاسم الكامل مملوءًا مسبقًا)
        window.addEventListener("load", function() {
            document.getElementById("DataEntry").value = document.getElementById("FullName").value;
        });
    </script>
}