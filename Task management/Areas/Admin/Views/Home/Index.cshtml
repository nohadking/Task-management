@section scripts {
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

	<script>
		$(document).ready(function () {
			var labels = @Html.Raw(Json.Serialize(ViewBag.Labels));
			var data = @Html.Raw(Json.Serialize(ViewBag.Data));
			var ctx = document.getElementById('myChart').getContext('2d');
			var chartData = {
				labels: labels,
				datasets: [{
					label: 'الذمم',
					data: data,
					backgroundColor: data.map(value => value < 0 ? 'rgba(200, 0, 0, 0.8)' : 'rgba(0, 76, 153, 0.8)'), 
					borderColor: data.map(value => value < 0 ? 'rgba(150, 0, 0, 1)' : 'rgba(0, 50, 100, 1)'),
					borderWidth: 2
				}]
			};
			var myChart = new Chart(ctx, {
				type: 'bar',
				data: chartData,
				options: {
					responsive: true,
					maintainAspectRatio: false,
					scales: {
						x: {
							ticks: {
								autoSkip: false, 
								maxRotation: 45,
								minRotation: 45
							}
						},
						y: {
							beginAtZero: true
						}
					},
					plugins: {
						legend: {
							position: 'top',
						},
						tooltip: {
							mode: 'index',
							intersect: false,
						}
					}
				}
			});
		});
	</script>



