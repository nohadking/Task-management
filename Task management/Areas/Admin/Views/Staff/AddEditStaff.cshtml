@model ViewmMODeElMASTER
@{
    ViewData["Title"] = ResourceWeb.LBAddEditStaff;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<form class="flex-fill" method="post" asp-controller="Staff" asp-action="Save" enctype="multipart/form-data">
    <div class="page-wrapper cardhead">
        <div class="content container-fluid">

            <!-- Page Header -->
            <div class="page-header">
                <div class="row">
                    <div class="col">
                        <h3 class="page-title">Basic Inputs</h3>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                            <li class="breadcrumb-item active">Basic Inputs</li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /Page Header -->
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Basic Inputs</h5>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="@Model.Staff.DataEntry" class="form-control" value="@User.Identity.Name">
                            <input type="hidden" asp-for="@Model.Staff.IdStaff" class="form-control">
                            <input type="hidden" asp-for="@Model.Staff.Photo" class="form-control">
                            <input type="hidden" asp-for="@Model.Staff.DateTimeEntry" value="@DateTime.Now">
                            <input type="hidden" asp-for="@Model.returnUrl" id="url">
                            <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                            <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-3 col-xs-6">
                                        <label class="form-label" asp-for="@Model.Staff.EmployeeFullname">@ResourceWeb.lbEmployeeFullname</label>
                                        <input type="text" class="form-control" asp-for="@Model.Staff.EmployeeFullname">
                                        <span asp-validation-for="@Model.Staff.EmployeeFullname" class="text-danger"></span>
                                        <span style="color:red"> <strong>@TempData["EmployeeFullname"]</strong></span>
                                    </div>
                            
                                    <div class="col-lg-3 col-xs-6">
                                        <label for="exampleInputEmail1">تابع لحساب</label>
                                        <select class="form-select" asp-items="@(new SelectList(ViewBag.BLevelThreeAccount, "IdLevelThreeAccount", "NameLevelThreeAccounts"))" id="IdLevelThreeAccount">
                                        </select>
                                    </div>

                                    <div class="col-lg-3 col-xs-6">
                                        <label class="form-label" asp-for="Staff.AccountNumber">@ResourceWeb.lbNumberAccount</label>
                                        <input type="text" class="form-control" asp-for="Staff.AccountNumber" id="Staff_NumberAccount" readonly>
                                        <span asp-validation-for="Staff.AccountNumber" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-3 col-xs-6">
                                        <label class="form-label" asp-for="@Model.Staff.EmployeePhone">@ResourceWeb.lbEmployeePhone</label>
                                        <input type="text" class="form-control" asp-for="@Model.Staff.EmployeePhone" maxlength="20">
                                        <span asp-validation-for="@Model.Staff.EmployeePhone" class="text-danger"></span>
                                        <span style="color:red"> <strong>@TempData["EmployeePhone"]</strong></span>
                                    </div>
                                </div>
                            </div>                           

                            <div class="card-content">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <label class="form-label" asp-for="@Model.Staff.EmployeeEmail">@ResourceWeb.lbEmployeeEmail</label>
                                        <input type="email" class="form-control" asp-for="@Model.Staff.EmployeeEmail">
                                        <span asp-validation-for="@Model.Staff.EmployeeEmail" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6 col-xs-6">
                                        <label class="form-label" asp-for="@Model.Staff.JobTitle">@ResourceWeb.lbJobTitle</label>
                                        <input type="text" class="form-control" asp-for="@Model.Staff.JobTitle">
                                        <span asp-validation-for="@Model.Staff.JobTitle" class="text-danger"></span>
                                    </div>  
                                    <div class="col-lg-6 col-xs-6">
                                        <label class="form-label" asp-for="@Model.Staff.EmployeeAddress">@ResourceWeb.lbEmployeeAddress</label>
                                        <input type="text" class="form-control" asp-for="@Model.Staff.EmployeeAddress">
                                        <span asp-validation-for="@Model.Staff.EmployeeAddress" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content" style="margin-top:50px">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="@Model.Staff.Active" role="switch" id="flexSwitchCheckChecked" checked="">
                                            <label class="form-check-label" for="flexSwitchCheckChecked">
                                                "@Model.Staff.Active /التفعيل
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-content" style="margin-top:50px">
                                <div class="row small-spacing">
                                    <div class="col-lg-6 col-xs-6">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" asp-for="@Model.Staff.CurrentState" role="switch" id="flexSwitchCheckChecked" checked="">
                                            <label class="form-check-label" for="flexSwitchCheckChecked">
                                                "@Model.Staff.CurrentState /الحالة
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <div class="page-wrapper cardhead" style="margin-top:-50px">
        <div class="content container-fluid">

            <!-- Page Header -->
            <!-- /Page Header -->

            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Olde Photo</h5>
                        </div>



                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">





                                    <div class="card-content">
                                        <div class="row small-spacing">
                                            <div class="col-lg-6 col-xs-6">
                                                <div class="custom-file-container" data-upload-id="myFirstImage">
                                                    <label>
                                                        <a href="javascript:void(0)" class="custom-file-container__image-clear" title="Clear Image"></a>
                                                    </label>

                                                    <label class="custom-file-container__custom-file">
                                                        <input type="file" class="custom-file-container__custom-file__custom-file-input" name="Files" id="file" onchange="loadFile(event)">
                                                        <input type="hidden" name="MAX_FILE_SIZE" value="10485760">
                                                        <img id="output" width="100" height="100" />
                                                    </label>
                                                </div>

                                            </div>
                                            <div class="col-lg-6 col-xs-6">
                                                <div class="form-group">
                                                    <input type="hidden" asp-for="@Model.Staff.Photo" for="exampleInputEmail1"></input>
                                                    <p><img src="@string.Format("/Images/Home/{0}",Model.Staff.Photo)" id="output" width="100" height="100" /></p>
                                                </div>
                                                <span class="custom-file-container__custom-file__custom-file-control"></span>

                                                <div class="custom-file-container__image-preview"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mb-4">



                            <button class="btn btn-secondary" type="submit">@ResourceWeb.lbSave</button>
                        </div>


                    </div>
                </div>
            </div>
        </div>

    </div>

</form>
@section Scripts {
    <script>
        var loadFile = function (event) {
            var output = document.getElementById('output');
            output.src = URL.createObjectURL(event.target.files[0]);
            output.onload = function () {
                URL.revokeObjectURL(output.src); // free memory
            }
        };
    </script>
    <script>
        document.getElementById("IdLevelThreeAccount").addEventListener("change", function () {
            var idLevelThreeAccount = this.value; // القيمة التي تم اختيارها

            if (idLevelThreeAccount) {
                // إرسال القيمة إلى الكنترول عبر AJAX
                fetch(`/Admin/Staff/GetNumberAccount?idLevelThreeAccount=${idLevelThreeAccount}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // تحديث حقل NumberAccount بالقيمة الجديدة
                            document.getElementById("Staff_NumberAccount").value = data.numberAccount;
                        } else {
                            alert(data.message); // في حال فشل العملية
                        }
                    })
                    .catch(error => console.error('Error:', error));
            }
        });
    </script>
}

