<!-- Add HomeSliderContent -->
<div class="modal fade" id="add-HomeSliderContent">
    <div class="modal-dialog modal-dialog-centered custom-modal-two">
        <div class="modal-content">
            <div class="page-wrapper-new p-0">
                <div class="content">
                    <div class="modal-header border-0 custom-modal-header">
                        <div class="page-title">
                            <h4>Create HomeSliderContent</h4>
                        </div>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body custom-modal-body">
                        <form role="form" method="post" asp-controller="HomeSliderContent" asp-action="Save" enctype="multipart/form-data">

                            <div class="form-group">
                                <input type="hidden" asp-for="@Model.HomeSliderContent.DataEntry" class="form-control" value="@User.Identity.Name">
                                <input type="hidden" asp-for="@Model.HomeSliderContent.IdHomeSliderContent" class="form-control">
                                <input type="hidden" asp-for="@Model.HomeSliderContent.DateTimeEntry" value="@DateTime.Now">
                                <input type="hidden" asp-for="@Model.returnUrl" id="url">
                                <span style="color:royalblue"> <strong>@TempData["Saved successfully"]</strong></span>
                                <span style="color:red"> <strong>@TempData["ErrorSave"]</strong></span>
                            </div>


                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.HomeSliderContent.TitleOneAr">@ResourceWeb.lbTitleOneAr</label>
                                <input type="text" class="form-control" asp-for="@Model.HomeSliderContent.TitleOneAr">
                                <span asp-validation-for="@Model.HomeSliderContent.TitleOneAr" class="text-danger"></span>
                                <span style="color:red"> <strong>@TempData["TitleOneAr"]</strong></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.HomeSliderContent.TitleOneEn">@ResourceWeb.lbTitleOneEn</label>
                                <input type="text" class="form-control" asp-for="@Model.HomeSliderContent.TitleOneEn">
                                <span asp-validation-for="@Model.HomeSliderContent.TitleOneEn" class="text-danger"></span>
                                <span style="color:red"> <strong>@TempData["TitleOneEn"]</strong></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.HomeSliderContent.TitleTwoAr">@ResourceWeb.lbTitleTwoAr</label>
                                <input type="text" class="form-control" asp-for="@Model.HomeSliderContent.TitleTwoAr">
                                <span asp-validation-for="@Model.HomeSliderContent.TitleTwoAr" class="text-danger"></span>
                                
                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.HomeSliderContent.TitleTwoEn">@ResourceWeb.lbTitleTwoEn</label>
                                <input type="text" class="form-control" asp-for="@Model.HomeSliderContent.TitleTwoEn">
                                <span asp-validation-for="@Model.HomeSliderContent.TitleTwoEn" class="text-danger"></span>                              
                            </div>

                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.HomeSliderContent.TitleButtonAr">@ResourceWeb.lbTitleButtonAr</label>
                                <input type="text" class="form-control" asp-for="@Model.HomeSliderContent.TitleButtonAr">
                                <span asp-validation-for="@Model.HomeSliderContent.TitleButtonAr" class="text-danger"></span>

                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.HomeSliderContent.TitleButtonEn">@ResourceWeb.lbTitleButtonEn</label>
                                <input type="text" class="form-control" asp-for="@Model.HomeSliderContent.TitleButtonEn">
                                <span asp-validation-for="@Model.HomeSliderContent.TitleButtonEn" class="text-danger"></span>
                            </div>





                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.HomeSliderContent.UrlButtonAr">@ResourceWeb.lbUrlButtonAr</label>
                                <input type="text" class="form-control" asp-for="@Model.HomeSliderContent.UrlButtonAr">
                                <span asp-validation-for="@Model.HomeSliderContent.UrlButtonAr" class="text-danger"></span>

                            </div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="@Model.HomeSliderContent.UrlButtonEn">@ResourceWeb.lbUrlButtonEn</label>
                                <input type="text" class="form-control" asp-for="@Model.HomeSliderContent.UrlButtonEn">
                                <span asp-validation-for="@Model.HomeSliderContent.UrlButtonEn" class="text-danger"></span>
                            </div>

                            <div class="mb-0">
                                <div class="status-toggle modal-status d-flex justify-content-between align-items-center">
                                    <span class="status-label">Status</span>
                                    <input type="checkbox" id="user2" asp-for="@Model.HomeSliderContent.CurrentState" class="check" checked="">
                                    <label for="user2" class="checktoggle"></label>
                                </div>
                            </div>
                         
                            <div class="modal-footer-btn">
                                <button type="button" class="btn btn-cancel me-2" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-submit">Create HomeSliderContent</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Add HomeSliderContent -->
